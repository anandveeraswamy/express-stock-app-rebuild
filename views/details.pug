html
  head
    title Product Details
    link(rel='stylesheet', href='/styles.css')
  body
    h1 Product Details

    //- Display product information
    p ID: #{product.id}
    p Name: #{product.name}
    p Price: #{product.price} GBP
    p Quantity: #{product.quantity}
    p Type: #{product.type}

    //- Display additional details based on product type
    if product.type === 'clothing' && product.Clothing
      p Size: #{product.Clothing.size}
      p Material: #{product.Clothing.material}
    else if product.type === 'electronic' && product.Electronic
      p Brand: #{product.Electronic.brand}
      p Warranty: #{product.Electronic.warranty}


    //- Link back to the inventory list
    a(href="/") Back to Inventory